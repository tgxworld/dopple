.navbar
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar{:data => {:toggle => 'collapse', :target => '.nav-collapse'}}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Dopple', root_path, :class => 'brand'
      .nav-collapse
        %ul.nav.pull-right
          - if user_signed_in?
            %li.dropdown
              %a.dropdown-toggle{:data => {:toggle => "dropdown"}}
                = current_user.username
                %b.caret
              %ul.dropdown-menu
                %li= link_to "Account Profile", user_profile_path
                %li.divider
                %li= link_to "Logout", logout_path
